(defcfg
  process-unmapped-keys no
)

(defvar
  tt  80 ;;tap-timeout
  ht  80 ;;hold-timeout
)
;; (tap-hold <timeout-tap> <timeout-hold> <on-tap> <on-hold>)
;; (layer-while-held <layer>)
(defalias
  cap (tap-hold-press $tt $ht esc lctl)
  vim (layer-while-held vim)
)

(defsrc
  caps
  ralt h j k l
)


;; Map the physical key to the alias
(deflayer base
  @cap
  @vim h j k l
)

(deflayer vim
  _
  _ left down up right
)
